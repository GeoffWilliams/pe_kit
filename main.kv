#:kivy 1.0
ScreenManagement:
    MainScreen:
    SettingsScreen:
  
<MainScreen>:
    name: 'main'
    
    advanced_layout: advanced_layout
    advanced_layout_holder: advanced_layout_holder
    app_status_label: app_status_label
    container_status_label:container_status_label
    container_delete_image: container_delete_image
    docker_status_image: docker_status_image
    action_layout_holder: action_layout_holder
    action_layout: action_layout
    pe_status_image: pe_status_image
    console_button: console_button
    terminal_button: terminal_button
    
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        
        BoxLayout:
            # PE Kit banner
            AnchorLayout:
                size_hint: (0.8,1) 
                Label:
                    text: 'PE Kit'
                    font_size: '40sp'
                             
            # settings
            Button:
                text: 'Settings'
                size_hint: (0.2,1)
                halign: 'center'
                valign: 'bottom'
                text_size: (self.width, self.height - 40)
                on_release: app.root.current = 'settings'
                Image:
                    source: 'icons/settings.png'
                    x: self.parent.x + (self.parent.width/2) - (self.width/2)
                    y: self.parent.y + (self.parent.height/2)
                    
        BoxLayout:
            id: action_layout_holder
            BoxLayout:
                id: action_layout
                orientation: 'vertical'
                # console
                BoxLayout:
                    Button:
                        id: console_button
                        text: 'Console'
                        on_press: app.pe_console()
                        disabled: True

                    # terminal
                    Button:
                        id: terminal_button
                        text: 'Terminal'
                        on_press: app.pe_terminal()

                #
                # Advanced
                #
                Button:
                    text: 'Toggle advanced actions'
                    on_press: app.toggle_advanced()
                    size_hint: (0.4, 0.5)

                BoxLayout:
                    id: advanced_layout_holder

                    BoxLayout:
                        id: advanced_layout

                        # run puppet
                        Button:
                            text:  'Run Puppet'
                            on_release: app.run_puppet()

                        # dockerbuild
                        Button:
                            text: 'Dockerbuild'
                            on_release: app.dockerbuild()

        #
        # Status
        #
        BoxLayout:
            Label:
                text: 'Status:'
                size_hint: (0.2, 1)
            Label:
                id: app_status_label
                text: '...'
                size_hint: (0.2, 1)
            Label:
                id: container_status_label
                text: '...'
                size_hint: (0.4, 1)
            # start/stop container
            GridLayout:
                size_hint: (0.2, 0.5)
                cols: 3
                Button:
                    on_release: app.controller.toggle_docker_container()
                    size_hint: (None, None)
                    #size_hint: (0.1, 1)
                    #width: dp(40)
                    #height: dp(40)
                    Image:
                        id: container_delete_image
                        allow_stretch: True
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
                        height: dp(40)
                        width: dp(40)
                        source: 'icons/play.png'

                Image:
                    id: pe_status_image
                    #size_hint: (0.1, 1)
                    allow_stretch: True
                    size_hint_y: None
                    size_hint_x: None
                    height: dp(40)
                    width: dp(40)
                    source: 'icons/disabled.png'                   
                Image:
                    id: docker_status_image
                    #size_hint: (0.1, 1)
                    allow_stretch: True
                    size_hint_y: None
                    size_hint_x: None
                    height: dp(40)
                    width: dp(40)
                    source:  'icons/ok.png'
                

            
<SettingsScreen>:
    name: 'settings'

    # widget/class variable mapping
    start_automatically_checkbox: start_automatically_checkbox
    kill_orphans_checkbox: kill_orphans_checkbox
    download_images_layout: download_images_layout
    selected_image_button: selected_image_button

    BoxLayout:
        orientation: 'vertical'

        # start automatically
        BoxLayout:
            CheckBox:
                id: start_automatically_checkbox
            Label:
                text: 'Start container automatically'
            
        # kill orphans
        BoxLayout:
            CheckBox:
                id: kill_orphans_checkbox

            Label:
                text: 'Kill orphaned containers on startup'
                
        # downloadable images
        BoxLayout:
            id: download_images_layout
            padding: 20
            orientation: 'vertical'

        # selected image
        BoxLayout:
            Label:
                text: "Selected image"
                
            Button:
                id: selected_image_button
                text: "Available images"
              

        Button:
            on_release: root.back()
            text: 'Back'
